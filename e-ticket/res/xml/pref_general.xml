<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Identitas" >
        <EditTextPreference
            android:capitalize="words"
            android:inputType="textCapWords"
            android:key="plat_bis"
            android:maxLines="1"
            android:singleLine="true"
            android:title="Nomor Plat Bis" android:dialogTitle="Nomor Plat Bis" android:dialogMessage="PERHATIAN : Spasi pada plat nomor harus ditempatkan dengan benar." android:defaultValue="@string/default_platbis"/>
        
    </PreferenceCategory>
    <PreferenceCategory android:title="Layanan" >
        <ListPreference
            android:dialogTitle="Pilih Bluetooth Printer dari daftar pairing."
            android:key="bluetooth_list" android:title="Pilih Bluetooth Printer..."/>
    <EditTextPreference android:dialogTitle="Alamat Layanan" android:dialogMessage="@string/technical_text" android:key="service_address" android:title="Alamat Layanan" android:defaultValue="@string/default_service"/></PreferenceCategory>
    <PreferenceCategory android:title="Maintenance">
        <Preference android:defaultValue="997" android:key="unique_key" android:title="Versi Rute Trayek" android:enabled="true" android:selectable="false"/>
        <ListPreference android:dialogTitle="Daftar Rute" android:key="route_list" android:title="Pilih Daftar Rute..." android:enabled="false"/>
        <Preference android:title="Impor Konfigurasi..." android:summary="Impor konfigurasi yang tersimpan di External Storage" android:key="import" />
        <Preference android:key="export" android:title="Ekspor Konfigurasi..." android:summary="Menyimpan konfigurasi sistem ke External Storage"/>
        
        
    </PreferenceCategory><PreferenceCategory android:title="Bantuan">
        <Preference android:summary="Tentang Aplikasi Ini" android:key="pref_about" android:title="Tentang"/><Preference android:title="Keluar" android:summary="Keluar dari Aplikasi" android:key="pref_quit"/>
        
    </PreferenceCategory>
    

</PreferenceScreen>